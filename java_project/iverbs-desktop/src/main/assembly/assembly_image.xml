<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <!-- Yo le doy este identificador para mis aplicaciones -->
    <id>image</id>

    <!--
        http://maven.apache.org/plugins/maven-assembly-plugin/assembly.html
    -->
    <formats>
        <!-- La salida ser치 un directorio -->
        <format>dir</format>
        <format>zip</format>
    </formats>

    <baseDirectory>./</baseDirectory>

    <fileSets>
        <!--
            Copiamos todos los jar del directorio "target" (donde compila maven)
            al directorio de salida "baseDirectory" es decir, s칩lo copiar치 el jar
            propio de la aplicaci칩n
        -->
        <fileSet>
            <directory>data</directory>
            <includes>
                <include>*.json</include>
            </includes>
        </fileSet>
    </fileSets>

</assembly>